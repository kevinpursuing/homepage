/*头像及昵称*/
.commentTable img
{
    width: 50px;
    height: 50px;
    border-radius: 2px;
    margin: 10px 11px 10px 0;
    cursor: pointer;
}
.imgRight
{
    font:normal normal normal 14px/1.5em 'Microsoft YaHei';
    letter-spacing: -0.3px;
    color: #3e3e3e;
}


.btn-danger{
    padding-left: 2px;
    padding-right: 2px;
    padding-top: 1px;
    padding-bottom: 1px;
    width: 28px;
    height: 20px;
    font-size: 6px;
}
.btn-primary{
    padding-left: 2px;
    padding-right: 2px;
    padding-top: 1px;
    padding-bottom: 1px;
    width: 28px;
    height: 20px;
    font-size: 6px;
}

.modal-content {
    /*width: 800px;*/
    /*height: 500px;*/
    width: 800px;
    height: 300px;
}

.modal-header {
    border: none;
}

.modal-footer {
    border: none;
    text-align: left;
}

.long {
    /*text-overflow: ellipsis !important;*/
    /*overflow: hidden!important;*/
    /*white-space: nowrap!important;*/
    max-width: 300px !important;
    word-break: break-all !important;
    word-wrap: break-word !important;
}

.operate_dialog {
    background-color: white;
    /*border: 1px solid lightgray;*/
    border: none;
    position: absolute;
    box-shadow: 0 0 5px lightgray;
    z-index: 10;
    width: 100px;
    left: 50%;
    top: 50%;
    margin-top: 10px;
    margin-left: -110px;
    display: none;
}

.operate_item {
    height: 40px;
    line-height: 40px;
}

.operate_item:hover{
    background-color:  #2c9de4;
    color:#fff;
    cursor: pointer;
}


.modal-footer{
    margin-top: 20px;
    text-align: left;
    border: none;
}

