.searchSelect
{
    float: left;
    width: 140px;
    height: 42px;
    margin: 18px 0 0 10px;
    border-radius: 4px;
    border: solid 1px #dcdcdc;
    letter-spacing: -0.2px;
    color: #333;
    font:normal normal normal 14px/42px 'Microsoft YaHei';
    padding-left: 25px;
}
.searchInputDiv
{
    float: left;
    width: 240px;
    height: 42px;
    margin: 18px 10px 0 10px;
    border-radius: 4px;
    border: solid 1px #dcdcdc;
    letter-spacing: -0.2px;
    color: #333;
    font:normal normal normal 14px/42px 'Microsoft YaHei';
}
.searchInputDiv img
{
    margin: 13px 8px 13px 16px;
}
.search
{
    border: none;
    width: 192px;
    height: 38px;
    outline: medium;
    margin-bottom: 2px;
}

.searchBtn
{
    display: block;
    float: left;
    width: 120px;
    height: 42px;
    border-radius: 4px;
    border: solid 1px #dcdcdc;
    font:normal normal normal 16px/40px 'Microsoft YaHei';
    letter-spacing: -0.3px;
    color: #3e3e3e;
    text-align: center;
    background-color: white;
    margin-top: 18px;
    outline: none;
}
.tool_bar{
    height: 34px;line-height: 34px;
    margin:10px 0 20px 0;
}
.tool_bar_item{
    float: right;
}
.tool_bar_item_left{
    float: left;
}

.tool_bar_item_margin{
    float: right;
    margin-right: 10px;
}