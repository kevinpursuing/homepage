.banner,.swiper-container{position:relative;overflow:hidden}.banner li,.swiper-container{width:100%;height:100%}.banner li,.banner li a img{float:left}.swiper-container .dots{position:absolute;left:50%;margin-left:-10px;bottom:20px}.swiper-container .dots li{display:inline-block;width:10px;height:10px;margin:0 4px;text-indent:-999em;background:#C4C5C0;border-radius:6px;cursor:pointer;opacity:.8;-webkit-transition:background .5s,opacity .5s;-moz-transition:background .5s,opacity .5s;transition:background .5s,opacity .5s}.swiper-container .dots li.active{background-color:#007AFF;opacity:1}.swiper-container #al{left:0}.swiper-container #ar{right:0}.unslider-arrow .arrow{position:absolute;width:90px;height:180px;top:37%}