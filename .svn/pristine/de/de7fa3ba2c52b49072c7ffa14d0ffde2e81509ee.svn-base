/*头部*/
.header
{
    width: 100%;
    height: 60px;
    margin-top: -10px;
}
.header h3
{
    font:normal bold normal 14px/1em 'Microsoft YaHei';
    letter-spacing: -0.3px;
    color: #3e3e3e;
    margin: 20px  0 0 10px;
    border-bottom: 1px solid #ececec;
    padding-bottom: 10px;
}

/*内容区*/
.content
{
    width: 100%;
    height: 500px;
    margin-top: -40px;
}
.editInputArea
{
    width: 100%;
    margin: 20px 0 30px -10px;
}
.editLabel
{
    width: 150px;
    height: 100%;
    padding-left: 20px;
    font:normal normal normal 14px/38px 'Microsoft YaHei';
    float: left;
}

.editSaveButton
{
    width: 160px;
    height: 42px;
    border-radius: 4px;
    background-color: #3a7bd5;
    border: none;
    font: normal normal normal 16px/40px 'Microsoft YaHei';
    color: white;
    text-align: center;
    letter-spacing: 2px;
    display: block;
    margin:60px 0 10px 140px;
}