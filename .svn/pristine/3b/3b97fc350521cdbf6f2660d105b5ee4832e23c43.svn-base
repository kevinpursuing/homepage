*
{
    margin: 0;
    padding: 0;
}
/*背景颜色区*/
.backgroundLayer
{
    width: 100%;
    z-index: 1;
}
.whiteLayer
{
    width: 100%;
    height: 50%;
    background-color: #fff;
}
.blueLayer
{
    width: 100%;
    height: 50%;
    background-color: #43A2F0;
}

/*所有内容*/
.wrapper
{
    position: absolute;
    top:0;
    left: 10%;
    width: 80%;
    height: 100%;
    z-index: 2;
}

/*图标区*/
.logo
{
    position:absolute;
    left:20px;
    top:20px;
    width: 110px;
    height: 50px;
    cursor: pointer;
}

/*内容区*/
.content
{
    position:absolute;
    left:50%;
    top:37%;
    transform: translate(-50%, -50%);
    width:65%;
    height: 400px;
    background-color: white;
    margin: 0 auto;
    box-shadow: 0 10px 30px 0 rgba(38, 40, 42, 0.1), 0 6px 12px 0 rgba(32, 36, 42, 0.2);
    margin-top: 88px;
    z-index: 2;
}
/*图层*/
.layerTitle
{
    width: 100%;
    height: 20px;
    font:normal normal normal 18px/20px 'Microsoft YaHei';
    text-align: center;
    margin-top: 40px;
}
.layerForm
{
    width: 80%;
    height: 300px;
    margin: 0 auto;
    margin-top: 40px;
}
.layerInputArea
{
    width: 100%;
    height: 42px;
    clear:both;
    margin-top: 20px;
}
.layerLabel
{
    float: left;
    width: 10%;
    height: 42px;
    font:normal normal normal 14px/42px 'Microsoft YaHei';
    margin-left: 23%;
}
.layerInput
{
    float: left;
    height: 40px;
    width: 40%;
    background-color: white;
    font:normal normal normal 14px/1.5em 'Microsoft YaHei';
    outline:medium;
    border: 1px solid #d4d1d1;
    border-radius: 5px;
    margin-left: 2%;
    padding-left: 1%;
    color:black;
}
.checkImg
{
    position: absolute;
    display: none;
    left:49%;
    top:235px;
    width: 20px;
    height: 20px;
}
.layerButton
{
    float: left;
    width: 22%;
    height: 42px;
    background-color: #00a0e9;
    border-radius: 4px;
    border: none;
    color: white;
    text-align: center;
    font: normal normal normal 14px/42px 'Microsoft YaHei';
    margin-left: 1%;
    cursor: pointer;
}
/*同意协议*/
#checkFlag
{
    float:left;
    margin-left: 23%;
    margin-top: 5px;
}
.agree
{
    display: block;
    float: left;
    font: normal normal normal 12px/1em 'Microsoft YaHei';
    margin: 5px 0 0 2%;
}
/*placeholder设置*/
input::-webkit-input-placeholder
{
    font:normal normal normal 14px/1.5em 'Microsoft YaHei';
}

/*底部*/
.footer
{
    position: absolute;
    left:0;
    bottom: 5%;
    width: 100%;
    height: 20px;
}
.footer div
{
    width:100%;
    font:normal normal normal 14px/20px 'Microsoft YaHei';
    color: #fff;
    text-align: center;
}

/*隔层*/
.seperate
{
    display: none;
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    z-index: 3;
    background-color: #abacac;
    opacity: 0.6;
}
/*协议详细*/
.agreeModal
{
    display: none;
    width: 55%;
    height: 450px;
    position: absolute;
    left: 50%;
    top:50%;
    transform:translate(-50%,-50%);
    background-color:#fff;
    z-index: 4;
}
.agreeModal h3
{
    width: 100%;
    text-align: center;
    margin: 15px 0 5px 0;
}

.agreeModalContent
{
    width: 80%;
    height: 350px;
    margin: 0 auto;
    overflow-y: auto;
    overflow-x:hidden;
    text-align: left;
    font: normal normal normal 12px/1.5em 'Microsoft YaHei';
}


